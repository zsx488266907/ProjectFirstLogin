<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegActivity">
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        >

        <EditText
            android:id="@+id/reg_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColorHint="#fff"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/login_icon_phone_n_xxhdpi"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/login_icon_ver_n_xxhdpi"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="20dp"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#ffffff"

            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/login_icon_lock_n_xxhdpi"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="20dp"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon_eye_n_xxhdpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#ffffff"

            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/tx_login"
            android:text="已有账号?立即登陆"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button

        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:background="@drawable/shape"
        android:textColor="#f00"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="bottom"
        />
</RelativeLayout>